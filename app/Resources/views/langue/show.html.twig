{% extends 'base.html.twig' %}

{% block body %}
    <h1>Langue</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ langue.id }}</td>
            </tr>
            <tr>
                <th>Nomlangue</th>
                <td>{{ langue.nomLangue }}</td>
            </tr>
            <tr>
                <th>Statutlangue</th>
                <td>{{ langue.statutLangue }}</td>
            </tr>
            <tr>
                <th>Datelangue</th>
                <td>{% if langue.dateLangue %}{{ langue.dateLangue|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('langue_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('langue_edit', { 'id': langue.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
