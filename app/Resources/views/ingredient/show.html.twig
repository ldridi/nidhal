{% extends 'base.html.twig' %}

{% block body %}
    <h1>Ingredient</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Nomingredient</th>
                <td>{{ ingredient.nomIngredient }}</td>
            </tr>
            <tr>
                <th>Statutingredient</th>
                <td>{{ ingredient.statutIngredient }}</td>
            </tr>
            <tr>
                <th>Dateingredient</th>
                <td>{% if ingredient.dateIngredient %}{{ ingredient.dateIngredient|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('ingredient_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('ingredient_edit', { 'id': ingredient.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
