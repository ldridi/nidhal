{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Issue list</h2>
            <ol class="breadcrumb">
                <li>
                    <a href="index-2.html">Home</a>
                </li>
                <li>
                    <a>App views</a>
                </li>
                <li class="active">
                    <strong>Issue list</strong>
                </li>
            </ol>
        </div>
        <div class="col-lg-2">

        </div>
    </div>

    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox float-e-margins">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">

                            <h5>Filtre Par RÃ©dacteurdqdq</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                {% for user in users %}
                                <li><a href="{{ path('messagerie_index') }}"> <i class="fa fa-inbox "></i> {{ user.username }} <span class="label label-warning pull-right">16</span> </a></li>
                                {% endfor %}
                            </ul>
                            <div class="clearfix"></div>
                            <h5>Filtre Par Niveau de signal</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="{{ path('messagerie_index') }}"> <i class="fa fa-inbox "></i> Faible <span class="label label-warning pull-right">16</span> </a></li>
                                <li><a href="{{ path('messagerie_sent') }}"> <i class="fa fa-envelope-o"></i>Moyen</a></li>

                                <li><a href="{{ path('messagerie_draft') }}"> <i class="fa fa-file-text-o"></i> Grave <span class="label label-danger pull-right">2</span></a></li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Probleme des recettes</h5>
                    </div>
                    <div class="ibox-content">

                        <div class="m-b-lg">

                            <div class="m-t-md">



                                <strong>{{ nbrSignal }} Signal recette</strong>



                            </div>

                        </div>

                        <div class="table-responsive">
                            <table class="table table-hover issue-tracker">
                                <tbody>
                                {% for signalRecette in signalRecettes %}
                                <tr>
                                    <td>
                                        {% if signalRecette.niveauSignalRecette == 'Faible' %}
                                        <span class="label label-primary">{{ signalRecette.niveauSignalRecette }}</span>
                                        {% elseif signalRecette.niveauSignalRecette == 'Moyen' %}
                                        <span class="label label-warning">{{ signalRecette.niveauSignalRecette }}</span>
                                        {% else %}
                                        <span class="label label-danger">{{ signalRecette.niveauSignalRecette }}</span>
                                        {% endif %}
                                    </td>
                                    <td class="issue-info">
                                        <a href="{{ path('recette_show', {'id':signalRecette.recette.id}) }}">
                                            {{ signalRecette.recette.nomRecette }}
                                        </a>

                                        <small>
                                            {{ signalRecette.texteSignalRecette[:100] }} ...
                                        </small>
                                    </td>
                                    <td>
                                        {{ signalRecette.recette.auteur.username }}
                                    </td>
                                    <td>
                                        {{ signalRecette.dateSignalRecette|date("m/d/Y") }}
                                    </td>
                                    <td class="text-right">
                                        <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-pencil"></i> </button>
                                        <a href="{{ path('signalrecette_show',{'id':signalRecette.id}) }}"> <button type="button" class="btn btn-sm btn-white"> <i class="fa fa-comments"></i> </button></a>
                                    </td>
                                </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>


    </div>
{% endblock %}
