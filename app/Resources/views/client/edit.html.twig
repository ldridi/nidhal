{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Article</h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-pencil-square-o"></i> Ajouter un article</h5>

                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="well well-sm">

                                    {{ form_start(edit_form) }}
                                    <div class="form-group"><label>Nom</label>
                                        {{ form_widget(edit_form.nomClient) }}
                                    </div>
                                    <div class="form-group"><label>Prenom</label>
                                        {{ form_widget(edit_form.prenomClient) }}
                                    </div>
                                    <div class="form-group"><label>Username</label>
                                        {{ form_widget(edit_form.username) }}
                                    </div>
                                    <div class="form-group"><label>email</label>
                                        {{ form_widget(edit_form.email) }}
                                    </div>
                                    <div class="form-group"><label>Mobile</label>
                                        {{ form_widget(edit_form.mobileClient) }}
                                    </div>

                                    <div class="form-group"><label>Mot de passe</label>
                                        {{ form_widget(edit_form.plain_password) }}
                                    </div>
                                    <div class="form-group"><label>image</label>
                                        {{ form_widget(edit_form.image) }}
                                    </div>


                                    <div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs btn-block" type="submit"><strong>Ajouter</strong></button>
                                            </div>
                                            {{ form_end(edit_form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
