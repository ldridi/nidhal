{% extends 'layout/layout.html.twig' %}
{% block body %}
    <div class="wrapper wrapper-content  animated fadeInRight">
        <div class="row">
            <div class="col-sm-12">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-8">

                                <h2>Liste des Ambiances
                                    <a href="{{ path('ambiance_new') }}">
                                        <button class="btn btn-sm btn-danger">Ajouter nouvelle Ambiance</button>
                                    </a>
                                </h2>
                                <div class="clients-list">
                                    <div class="tab-content">
                                        <div id="tab-1" class="tab-pane active">
                                            <div class="full-height-scroll">
                                                <div class="table-responsive">
                                                    <table class="table table-striped table-hover">
                                                        <tbody>
                                                        <tr>
                                                            <td class="client-avatar"><i class="fa fa-list" aria-hidden="true"></i>
                                                            </td>

                                                            <td align="center" class="client-link">Titre Ambiance</td>
                                                            <td align="center" class="client-link"> Date d'ajout Ambiance</td>
                                                            <td class="client-link" align="center">
                                                                Statut Ambiance
                                                            </td>
                                                            <td class="client-link" align="center">
                                                                Categorie Associé
                                                            </td>
                                                            <td align="center" class="client-link">
                                                                Operation
                                                            </td>
                                                        </tr>
                                                        {% for ambiance in ambiances %}
                                                            <tr>
                                                                <td class="client-avatar"><i class="fa fa-list" aria-hidden="true"></i>
                                                                </td>

                                                                <td align="center">{{ ambiance.nomAmbiance }}</td>
                                                                <td align="center"> {{ ambiance.dateAmbiance|date("m/d/Y") }}</td>
                                                                <td  align="center">
                                                                    {% if(ambiance.statutAmbiance == 1) %}
                                                                        <span class="label label-primary">Activé</span>
                                                                    {% else %}
                                                                        <span class="label label-danger">Désactivé</span>
                                                                    {% endif %}
                                                                </td>
                                                                <td align="center">
                                                                    {% for cat in ambiance.categorie %}
                                                                        <span class="badge badge-info">{{ cat.nomCategorie }}</span>
                                                                    {% endfor %}
                                                                </td>
                                                                <td align="center">
                                                                    <a href="{{ path('ambiance_edit', { 'id': ambiance.id }) }}">
                                                                        <button class="btn btn-xs btn-success">Ajouter</button>
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                        {% endfor %}
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="well well-sm">
                                    <h2>Liste des Ambiances</h2>
                                    {{ form_start(form) }}
                                    <div class="form-group"><label>Titre Ambiance</label>
                                        {{ form_widget(form.nomAmbiance) }}
                                    </div>
                                    <div class="form-group"><label>Categorie Ambiance</label>
                                        {{ form_widget(form.categorie) }}
                                    </div>
                                    <div class="form-group"><label>Statut Ambiance</label>
                                        {{ form_widget(form.statutAmbiance) }}
                                    </div>
                                    <div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs btn-block" type="submit"><strong>Ajouter</strong></button>
                                            </div>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>


        </div>
    </div>
{% endblock %}
