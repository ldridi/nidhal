{% extends 'base.html.twig' %}

{% block body %}
    <h1>Prix list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomprix</th>
                <th>Statutprix</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prix in prixes %}
            <tr>
                <td><a href="{{ path('prix_show', { 'id': prix.id }) }}">{{ prix.id }}</a></td>
                <td>{{ prix.nomPrix }}</td>
                <td>{{ prix.statutPrix }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('prix_show', { 'id': prix.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('prix_edit', { 'id': prix.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('prix_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
