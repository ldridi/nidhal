{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Modification d'une recette</h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Modifier une recette</h5>
                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="well well-sm">
                                    {{ form_start(edit_form) }}
                                    <div class="form-group"><label>Titre</label>
                                        {{ form_widget(edit_form.nomRecette) }}
                                    </div>
                                    <div class="form-group"><label>Couverture</label>
                                        {{ form_widget(edit_form.image) }}
                                    </div>
                                    <div class="form-group"><label>Theme</label>
                                        {{ form_widget(edit_form.theme) }}
                                    </div>
                                    <div class="form-group"><label>Prix</label>
                                        {{ form_widget(edit_form.prix) }}
                                    </div>
                                    <div class="form-group"><label>Menu</label>
                                        {{ form_widget(edit_form.menu, { 'id': 'selectmenu' }) }}
                                    </div>
                                    <div class="form-group"><label>Subcategorie</label>
                                        {{ form_widget(edit_form.subcategorie,{ 'id': 'selectsubcategorie' }) }}
                                    </div>
                                    <div class="form-group"><label>Type Cuisson</label>
                                        {{ form_widget(edit_form.typecuisson) }}
                                    </div>
                                    <div class="form-group"><label>Saison</label>
                                        {{ form_widget(edit_form.saison) }}
                                    </div>
                                    <div class="form-group"><label>nationalite</label>
                                        {{ form_widget(edit_form.nationalite) }}
                                    </div>
                                    <div class="form-group"><label>Ingredient</label>
                                        {{ form_widget(edit_form.ingredient) }}
                                    </div>
                                    <div class="form-group"><label>Details Ingredient</label>
                                        {{ form_widget(edit_form.descriptionIngredientRecette) }}
                                    </div>
                                    <div class="form-group"><label>Difficulte</label>
                                        {{ form_widget(edit_form.difficulte) }}
                                    </div>
                                    <div class="form-group"><label>Couisson</label>
                                        {{ form_widget(edit_form.cuissonRecette) }}
                                    </div>

                                    <div class="form-group"><label>Pr√©paration</label>
                                        {{ form_widget(edit_form.preparationRecette) }}
                                    </div>
                                    <div class="form-group"><label>Description</label>
                                        {{ form_widget(edit_form.descriptionRecette) }}
                                    </div>

                                    <div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs btn-block" type="submit"><strong>Modifier</strong></button>
                                            </div>
                                            {{ form_end(edit_form) }}
                                            {% if is_granted('ROLE_ADMIN') %}
                                            <div class="col-md-6">
                                                {{ form_start(delete_form) }}
                                                <button class="btn btn-sm btn-danger pull-right m-t-n-xs btn-block" type="submit"><strong>Supprimer</strong></button>
                                                {{ form_end(delete_form) }}
                                            </div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
