{% extends 'base.html.twig' %}

{% block body %}
    <h1>Theme</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ theme.id }}</td>
            </tr>
            <tr>
                <th>Nomtheme</th>
                <td>{{ theme.nomTheme }}</td>
            </tr>
            <tr>
                <th>Statuttheme</th>
                <td>{{ theme.statutTheme }}</td>
            </tr>
            <tr>
                <th>Datetheme</th>
                <td>{% if theme.dateTheme %}{{ theme.dateTheme|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('theme_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('theme_edit', { 'id': theme.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
