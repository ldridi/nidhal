{% extends 'layout/layout.html.twig' %}
{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Liste des articles <span class="badge badge-danger">{{ nbr }}</span> </h2>
        </div>
    </div>
    <div class="wrapper wrapper-content">

        <div class="row">
            <div class="col-lg-12">
            <div class="wrapper wrapper-content animated fadeInRight">

                <div class="row">
                    {% for article in articles %}
                    <a href="{{ path('article_show', {'id':article.id}) }}" class="btn-link">
                        <div class="col-md-3">
                        <div class="ibox">
                            <div class="ibox-content">
                                <div class="">
                                    <img src="{{ asset(article.image.WebPath) }}" class="img-responsive" style="width: 100%;height: 150px;">
                                </div>
                                <a href="{{ path('article_show', {'id':article.id}) }}" class="btn-link">
                                    <h2>
                                        {{ article.nomArticle }}
                                    </h2>
                                </a>
                                <div class="small m-b-xs">
                                    <strong>Par : {{ article.auteur.username }}</strong> <span class="text-muted"><i class="fa fa-clock-o"></i> {{  article.dateArticle|date("m/d/Y") }}</span>
                                </div>
                                <div class="row">

                                    <div class="col-md-12">
                                        <div class="small">
                                            <h5>Stats: <i class="fa fa-eye"> </i> 144 views</h5>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </a>
                    {% endfor %}

                </div>




            </div>
            </div>
        </div>
    </div>
{% endblock %}