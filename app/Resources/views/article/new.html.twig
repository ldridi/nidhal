{% extends 'layout/layout.html.twig' %}

{% block body %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>Article</h2>

        </div>
        <div class="col-lg-2">

        </div>
    </div>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5><i class="fa fa-pencil-square-o"></i> Ajouter un article</h5>

                    </div>
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="well well-sm">

                                    {{ form_start(form) }}
                                    <div class="form-group"><label>Titre de l'article</label>
                                        {{ form_widget(form.nomArticle) }}
                                    </div>
                                    <div class="form-group"><label>Langue</label>
                                        {{ form_widget(form.langue) }}
                                    </div>
                                    <div class="form-group"><label>Theme</label>
                                        {{ form_widget(form.theme) }}
                                    </div>
                                    <div class="form-group"><label>Topic</label>
                                        {{ form_widget(form.topic) }}
                                    </div>
                                    <div class="form-group"><label>Image de couverture</label>
                                        {{ form_widget(form.image) }}
                                    </div>
                                    <div class="form-group"><label>Description de l'article</label>
                                        {{ form_widget(form.descriptionArticle) }}
                                    </div>
                                    <div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <button class="btn btn-sm btn-primary pull-right m-t-n-xs btn-block" type="submit"><strong>Ajouter</strong></button>
                                            </div>
                                            {{ form_end(form) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
