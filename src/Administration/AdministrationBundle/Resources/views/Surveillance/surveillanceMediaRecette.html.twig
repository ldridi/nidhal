{% extends 'layout/layout.html.twig' %}
{% block body %}
   <div class="row wrapper border-bottom white-bg page-heading">
      <div class="col-lg-10">
         <h2>Liste des articles <span class="badge badge-danger"></span> </h2>
      </div>
   </div>
   <div class="wrapper wrapper-content">

      <div class="row">
         {{ render(controller('AdministrationBundle:Surveillance:categorieSurveillance')) }}
         <div class="col-lg-9">
            <div class="wrapper wrapper-content animated fadeInRight">

               <div class="row">
                  {% for imageRecette in recettes %}
                     <a href="{{ path('recette_show', {'id':imageRecette.id}) }}" class="btn-link">
                        <div class="col-md-4">
                           <div class="ibox">
                              <div class="ibox-content">
                                 <div class="small m-b-xs">
                                    Ajout√© par : <strong>{{ imageRecette.auteur.username }}</strong>
                                 </div>
                                 <div class="">
                                    <img src="{{ asset(imageRecette.image.WebPath) }}" class="img-responsive" style="width: 100%;height: 150px;">
                                 </div>

                                 <div class="row" style="margin-top:10px;">
                                    <div class="col-md-12">
                                       <button class="btn btn-danger btn-xs btn-block" type="button">Signaler</button>

                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </a>
                  {% endfor %}

               </div>




            </div>
         </div>
      </div>
   </div>
{% endblock %}